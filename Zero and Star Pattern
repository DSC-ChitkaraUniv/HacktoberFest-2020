n=int(input())
i=1
k=n
while i<=n:
    for zeroes in range (1,i):
            print("0",end="")
    
    j=1
    while j<=2*k+1:
        if j==1 or j==((2*k)+2)//2 or j==2*k+1:
            print("*",end="")
        else: 
            print(0,end="")
        j+=1
    for s in range(1,i):
        print("0",end="")
    k-=1
    print()
    i+=1    
    
        
    
    
